<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jellyfishmix.wxinterchange.dao.TeamUserDao">

    <resultMap type="com.jellyfishmix.wxinterchange.entity.TeamUser" id="TeamUserMap">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="tid" column="tid" jdbcType="VARCHAR"/>
        <result property="uid" column="uid" jdbcType="VARCHAR"/>
        <result property="userAvatarUrl" column="user_avatar_url" jdbcType="VARCHAR"/>
        <result property="userGrade" column="user_grade" jdbcType="INTEGER"/>
        <!--<result property="creationTime" column="creation_time" jdbcType="TIMESTAMP"/>-->
        <!--<result property="modifiedTime" column="modified_time" jdbcType="TIMESTAMP"/>-->
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="TeamUserMap">
        select
          id, tid, uid, user_avatar_url, user_grade, creation_time, modified_time
        from wx_interchange.team_user
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="TeamUserMap">
        select
          id, tid, uid, user_avatar_url, user_grade, creation_time, modified_time
        from wx_interchange.team_user
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="TeamUserMap">
        select
          id, tid, uid, user_avatar_url, user_grade, creation_time, modified_time
        from wx_interchange.team_user
        <where>
            <if test="id != null">
                and id = #{id}
            </if>
            <if test="tid != null and tid != ''">
                and tid = #{tid}
            </if>
            <if test="uid != null and uid != ''">
                and uid = #{uid}
            </if>
            <if test="userAvatarUrl != null and userAvatarUrl != ''">
                and user_avatar_url = #{userAvatarUrl}
            </if>
            <if test="userGrade != null">
                and user_grade = #{userGrade}
            </if>
            <if test="creationTime != null">
                and creation_time = #{creationTime}
            </if>
            <if test="modifiedTime != null">
                and modified_time = #{modifiedTime}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into wx_interchange.team_user(tid, uid, user_avatar_url, user_grade)
        values (#{tid}, #{uid}, #{userAvatarUrl}, #{userGrade})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update wx_interchange.team_user
        <set>
            <if test="tid != null and tid != ''">
                tid = #{tid},
            </if>
            <if test="uid != null and uid != ''">
                uid = #{uid},
            </if>
            <if test="userAvatarUrl != null and userAvatarUrl != ''">
                user_avatar_url = #{userAvatarUrl},
            </if>
            <if test="userGrade != null">
                user_grade = #{userGrade},
            </if>
            <!--<if test="creationTime != null">-->
            <!--    creation_time = #{creationTime},-->
            <!--</if>-->
            <!--<if test="modifiedTime != null">-->
            <!--    modified_time = #{modifiedTime},-->
            <!--</if>-->
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from wx_interchange.team_user where id = #{id}
    </delete>

</mapper>