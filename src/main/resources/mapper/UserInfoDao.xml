<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jellyfishmix.wxinterchange.dao.UserInfoDao">
    <!--新增用户信息-->
    <insert id="insertUserInfo" parameterType="com.jellyfishmix.wxinterchange.entity.UserInfo" keyColumn="id">
        insert into wx_interchange.user_info(uid, username, openid, avatar_url)
        values (#{uid}, #{username}, #{openid}, #{avatarUrl})
    </insert>

    <!--修改用户信息-->
    <update id="updateUserInfo" parameterType="com.jellyfishmix.wxinterchange.entity.UserInfo" keyColumn="uid" keyProperty="uid">
        update wx_interchange.user_info
        <set>
            <if test="username != null">username = #{username},</if>
            <if test="avatarUrl != null">avatar_url = #{avatarUrl},</if>
            <if test="createdTeamCounts != null">created_team_counts = #{createdTeamCounts},</if>
            <if test="managedTeamCounts != null">managed_team_counts = #{managedTeamCounts},</if>
            <if test="joinedTeamCounts != null">joined_team_counts = #{joinedTeamCounts}</if>
        </set>
        where uid = #{uid}
    </update>

    <!--userInfoMap-->
    <resultMap id="userInfoMap" type="com.jellyfishmix.wxinterchange.entity.UserInfo">
        <id column="uid" property="uid" jdbcType="VARCHAR" />
        <id column="username" property="username" jdbcType="VARCHAR" />
        <id column="openid" property="openid" jdbcType="VARCHAR" />
        <id column="avatar_url" property="avatarUrl" jdbcType="VARCHAR" />
        <id column="created_team_counts" property="createdTeamCounts" jdbcType="INTEGER" />
        <id column="managed_team_counts" property="managedTeamCounts" jdbcType="INTEGER" />
        <id column="joined_team_counts" property="joinedTeamCounts" jdbcType="INTEGER" />
        <!--无特殊情况不开放creationTime和modifiedTime-->
        <!--<id column="creation_time" property="creationTime" jdbcType="TIMESTAMP" />-->
        <!--<id column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP" />-->
    </resultMap>
    
    <!--通过uid查找用户信息-->
    <select id="queryByUid" resultMap="userInfoMap">
        select uid, username, openid, avatar_url, created_team_counts, managed_team_counts, joined_team_counts
        from wx_interchange.user_info
        where uid = #{uid}
    </select>

    <!--通过openid查找用户信息-->
    <select id="queryByOpenid" resultMap="userInfoMap">
        select uid, username, openid, avatar_url, created_team_counts, managed_team_counts, joined_team_counts
        from wx_interchange.user_info
        where openid = #{openid}
    </select>

    <!--delete暂时不做-->
</mapper>